@model IEnumerable<S_me.Models.Sanpham>

@{
    ViewBag.Title = "QLSanpham";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/css/Product.css" rel="stylesheet" />
<link href="~/Content/css/index.css" rel="stylesheet" />
<link href="~/Content/css/Admin.css" rel="stylesheet" />

<center class="QLSP">
    <h2>Quản lý Sản phẩm</h2>

    <p>
        <button class="buy-button">
            @Html.ActionLink("Thêm sản phẩm", "SpThem")
        </button>
    </p>
    <div class="container detail-table">
        <div class="detail-tables">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DanhmucObj.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ThuonghieuObj.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Summary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Picture)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Picture2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Storage)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DanhmucObj.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThuonghieuObj.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Summary)
                        </td>
                        <td>
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Picture)"
                                 style="width: 200px;" />
                        </td>
                        <td>
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Picture2)"
                                 style="width: 200px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Storage)
                        </td>

                        <td>
                            <button class="buy-button">@Html.ActionLink("Edit", "SpSua", new { id = item.SpID })</button>
                            <br>
                            <button class="buy-button">@Html.ActionLink("Details", "SpChitiet", new { id = item.SpID })</button>
                            <br>
                            <button class="buy-button">@Html.ActionLink("Delete", "SpXoa", new { id = item.SpID })</button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</center>
