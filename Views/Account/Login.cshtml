@using S_me.Models
@model LoginViewModel
@{
    ViewBag.Title = "Dangnhap";
}

<link href="~/Content/css/sign-in.css" rel="stylesheet" />
<link href="~/Content/css/Product.css" rel="stylesheet" />
<style>
    #remember {
        margin-top: 5px;
        width: 15px;
        height: 15px;
    }
</style>

<main aria-labelledby="title">
    <h2 id="title">Đăng nhập</h2>

    <div class="row login-container">
        <div class=" login-img col-5  col-md-12">
            <img src="~/Content/images/15.png" />
        </div>
        <div class="login col-7 col-md-12" style="height:500px;">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    <h2 style="padding:40px;">Đăng nhập</h2>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email/Tên đăng nhập" })
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu" })
                    <div style="color:red;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="offset-md-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "labelcheckbox", @id = "remember" })
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" offset-md-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="button" />
                        </div>
                    </div>
                    <p class="register">
                        @Html.ActionLink("Đăng ký tài khoản mới?", "Register")
                    </p>

                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }

            </section>
            <button class="buy-button offset-md-2 col-md-10">
                @Html.ActionLink("Đăng nhập Admin", "AdminLogin", "Admin")
            </button>
        </div>

        @*<div class="col-6 col-md-12">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}